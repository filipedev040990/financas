// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id
  name        String
  password    String
  login       String
  accessToken String    @db.LongText()
  created_at  DateTime
  updated_at  DateTime?

  @@map("users")
}

model Category {
  id         String    @id
  name       String
  created_at DateTime
  updated_at DateTime?
  Bill       Bill[]

  @@map("categories")
}

model PaymentMethod {
  id          String        @id
  name        String
  created_at  DateTime
  updated_at  DateTime
  BillPayment BillPayment[]

  @@map("payment_methods")
}

model Bill {
  id          String       @id
  type        String
  category    Category     @relation(fields: [category_id], references: [id])
  category_id String
  expiration  DateTime
  totalValue  Int
  observation String?      @db.LongText()
  status      String
  created_at  DateTime
  updated_at  DateTime?
  BillPayment BillPayment?

  @@map("bill")
}

model BillPayment {
  id              String         @id
  billId          String         @unique
  bill            Bill           @relation(fields: [billId], references: [id])
  totalValue      Int
  interest        Int
  discount        Int
  PaymentMethod   PaymentMethod? @relation(fields: [paymentMethodId], references: [id])
  paymentMethodId String
  reversed        Boolean
  created_at      DateTime
  updated_at      DateTime?

  @@map("bill_payment")
}

model Request {
  id          String    @id
  originalUrl String
  method      String
  ip          String
  input       String    @db.LongText()
  output      String?   @db.LongText()
  status      Int?
  created_at  DateTime
  updated_at  DateTime?

  @@map("requests")
}

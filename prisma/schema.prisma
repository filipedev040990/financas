// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id
  name         String
  password     String
  login        String
  access_token String    @db.LongText()
  created_at   DateTime
  updated_at   DateTime?

  @@map("users")
}

model Category {
  id         String   @id
  name       String
  created_at DateTime
  updated_at DateTime
  Bill       Bill[]

  @@map("categories")
}

model PaymentMethod {
  id         String   @id
  name       String
  created_at DateTime
  updated_at DateTime
  Bill       Bill[]

  @@map("payment_methods")
}

model Bill {
  id                String        @id
  type              String
  category          Category      @relation(fields: [category_id], references: [id])
  category_id       String
  expiration        DateTime
  total_value       Int
  observation       String?       @db.LongText()
  payment_method    PaymentMethod @relation(fields: [payment_method_id], references: [id])
  payment_method_id String
  status            String
  created_at        DateTime
  updated_at        DateTime?

  @@map("bill")
}
